{
  "name": "skoolcampus",
  "version": "1.0.0",
  "description": "SkoolCampus - Complete School Management System",
  "scripts": {
    "start": "node start.js",
    "start:backend": "cd nestjs-backend && npm run start:dev",
    "start:frontend": "cd angular-frontend && npm start",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd nestjs-backend && npm install",
    "install:frontend": "cd angular-frontend && npm install",
    "build:all": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd nestjs-backend && npm run build",
    "build:frontend": "cd angular-frontend && npm run build",
    "prisma:generate": "cd nestjs-backend && npm run prisma:generate",
    "prisma:studio": "cd nestjs-backend && npm run prisma:studio"
  },
  "keywords": [
    "school-management",
    "nestjs",
    "angular",
    "prisma",
    "education"
  ],
  "author": "SkoolCampus Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
